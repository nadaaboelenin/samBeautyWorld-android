<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/code_one_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:backgroundTint="@color/backgroundColor"
            android:hint="."
            android:inputType="number"
            android:maxLength="1"
            android:nextFocusDown="@+id/code_two_et"
            android:nextFocusForward="@+id/code_two_et"
            android:paddingStart="13dp"
            android:paddingTop="10dp"
            android:paddingEnd="13dp"
            android:paddingBottom="10dp"

            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            tools:ignore="RtlHardcoded" />

        <EditText
            android:id="@+id/code_two_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:backgroundTint="@color/backgroundColor"
            android:hint="."
            android:inputType="number"
            android:maxLength="1"
            android:nextFocusDown="@+id/code_three_et"
            android:nextFocusForward="@+id/code_three_et"
            android:paddingStart="13dp"
            android:paddingTop="10dp"
            android:paddingEnd="13dp"
            android:paddingBottom="10dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            tools:ignore="RtlHardcoded" />

        <EditText
            android:id="@+id/code_three_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:backgroundTint="@color/backgroundColor"
            android:hint="."
            android:inputType="number"
            android:maxLength="1"
            android:nextFocusDown="@+id/code_fourth_et"
            android:nextFocusForward="@+id/code_fourth_et"
            android:paddingStart="13dp"
