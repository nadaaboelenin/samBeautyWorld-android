<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/_8sdp"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/_2sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <TextView
          android:textSize="@dimen/_16ssp"
          android:textColor="@color/backgroundColor"
          android:id="@+id/tvCountryName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="8dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:text="Dubai"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.027"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:textColor="@android:color/darker_gray"
          android:id="@+id/tvNumberOfSalons"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          android:layout_marginEnd="8dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="12dp"
          android:text="148 salons"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.025"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tvCountryName"
          app:layout_constraintVertical_bias="0.0" />

      <TextView
          android:visibility="gone"
          style="@style/TextAppearance.AppCompat.Small"
          android:textSize="@dimen/_10ssp"
          android:paddingBottom="4dp"
          android:paddingTop="4dp"
          android:paddingStart="22dp"
          android:paddingEnd="22dp"
          android:background="@drawable/drawable_button_background"
          android:id="@+id/tvSelectedSalon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:layout_marginEnd="40dp"
          android:layout_marginTop="8dp"
          android:text="@string/selected"
          app:layout_constraintBottom_toBottomOf="@+id/tvNumberOfSalons"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="@+id/tvCountryName"
          app:layout_constraintVertical_bias="0.466" />
  </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>