<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/tvConfirmLocationToUpdate"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/ivLocationIcons"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:background="@drawable/rounded_button_back"
        android:gravity="center"
        android:text="@string/confirm_location"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/ivLocationIcons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_location_on_black_24dp"
        android:tint="@color/backgroundColor" />


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:visibility="gone"
        android:id="@+id/map_select_address"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <Button
        android:visibility="gone"
        android:id="@+id/btDoneWIthLocationSelection"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/backgroundColor"
        android:text="@string/select_location"
        android:textColor="@android:color/white" />
</RelativeLayout>